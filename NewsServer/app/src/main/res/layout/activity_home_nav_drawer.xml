<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="right">
    <include
        layout="@layout/activity_home_nav_drawer_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:scrollbarAlwaysDrawVerticalTrack="true">
        <include layout="@layout/navigation_drawer_header" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <TextView
                android:id="@+id/app_home_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_page_menu_text"
                android:textSize="20sp"
                android:textColor="@color/color_navy_blue"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:padding="4dp"
                android:background="@android:color/white"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/app_home_customize_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:background="@color/light_button_background"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/app_home_options"
                android:text="@string/customize_app_home_page_menu_text"
                android:visibility="gone"/>
            <ImageButton
                android:id="@+id/app_home_options"
                android:background="@android:color/white"
                android:src="@drawable/ic_more_vert"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/customize_app_home_page_menu_text"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#c0c0c0"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <TextView
                android:id="@+id/newspaper_drop_down_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/newspaper_list_menu_text"
                android:textSize="20sp"
                android:textColor="@color/color_navy_blue"
                android:padding="4dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@android:color/white"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/newspaper_list_customize_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:background="@color/light_button_background"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/newspaper_list_options"
                android:text="@string/customize_newspaper_menu_item_text"
                android:visibility="gone"/>
            <ImageButton
                android:id="@+id/newspaper_list_options"
                android:background="@android:color/white"
                android:src="@drawable/ic_more_vert"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/customize_newspaper_menu_item_text"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#c0c0c0"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/newspaper_list"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        </androidx.recyclerview.widget.RecyclerView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#c0c0c0"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <TextView
                android:id="@+id/news_category_drop_down_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/news_category_list_menu_text"
                android:textSize="20sp"
                android:textColor="@color/color_navy_blue"
                android:padding="4dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@android:color/white"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/cus_news_category_customize_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:background="@color/light_button_background"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cus_news_category_options"
                android:text="@string/customize_news_categories_menu_item_text"
                android:visibility="gone"/>
            <ImageButton
                android:id="@+id/cus_news_category_options"
                android:background="@android:color/white"
                android:src="@drawable/ic_more_vert"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/customize_news_categories_menu_item_text"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#c0c0c0"/>
        <ListView
            android:id="@+id/news_category_list"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/news_category_list_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">
        </androidx.recyclerview.widget.RecyclerView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#c0c0c0"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <TextView
                android:id="@+id/favourite_features_drop_down_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/favorite_features_menu_text"
                android:textSize="20sp"
                android:textColor="@color/color_navy_blue"
                android:padding="4dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@android:color/white"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/favourites_customize_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:background="@color/light_button_background"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/favourites_options"
                android:text="@string/clear_all_menu_item_text"
                android:visibility="gone"/>
            <ImageButton
                android:id="@+id/favourites_options"
                android:background="@android:color/white"
                android:src="@drawable/ic_more_vert"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                android:contentDescription="@string/clear_all_menu_item_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#c0c0c0"/>
        <ListView
            android:id="@+id/favorite_features_list"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favorite_features_list_rv"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">
        </androidx.recyclerview.widget.RecyclerView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#c0c0c0"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <TextView
                android:id="@+id/most_frequent_features_drop_down_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/most_frequent_features_menu_text"
                android:textSize="20sp"
                android:textColor="@color/color_navy_blue"
                android:padding="4dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@android:color/white"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/frequent_features_customize_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:background="@color/light_button_background"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/frequent_features_options"
                android:text="@string/clear_list_menu_item_text"
                android:visibility="gone"/>
            <ImageButton
                android:id="@+id/frequent_features_options"
                android:background="@android:color/white"
                android:src="@drawable/ic_more_vert"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/clear_list_menu_item_text"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#c0c0c0"/>
        <ListView
            android:id="@+id/most_frequent_features_list"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/most_frequent_features_list_rv"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">
        </androidx.recyclerview.widget.RecyclerView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#c0c0c0"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <TextView
                android:id="@+id/saved_articles_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/saved_articles_menu_text"
                android:textSize="20sp"
                android:textColor="@color/color_navy_blue"
                android:padding="4dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@android:color/white"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/delete_saved_articles_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:background="@color/light_button_background"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/delete_saved_articles_options"
                android:text="@string/delete_saved_articles_option_text"
                android:visibility="gone"/>
            <ImageButton
                android:id="@+id/delete_saved_articles_options"
                android:background="@android:color/white"
                android:src="@drawable/ic_more_vert"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/delete_saved_articles_option_text"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#c0c0c0"/>
        <LinearLayout
            android:id="@+id/config_check_report_display_menu"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:id="@+id/display_config_check_report_fragment_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/display_config_check_report_fragment_menu_text"
                android:textSize="20sp"
                android:textColor="@color/color_navy_blue"
                android:padding="4dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@android:color/white"
                android:textAlignment="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"/>
            <TextView
                android:id="@+id/disable_config_check_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/disable_config_check__menu_text"
                android:textSize="20sp"
                android:textColor="@color/color_navy_blue"
                android:padding="4dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@android:color/white"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/enable_config_check_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enable_config_check_menu_text"
                android:textSize="20sp"
                android:textColor="@color/color_navy_blue"
                android:padding="4dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@android:color/white"
                android:textAlignment="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#c0c0c0"/>
        </LinearLayout>

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>