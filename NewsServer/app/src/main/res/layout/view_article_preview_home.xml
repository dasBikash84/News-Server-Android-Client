<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryLight"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Page Title"
            android:textStyle="italic"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/article_preview_image"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:background="@android:color/white"
            android:padding="2dp"
            android:gravity="center"
            android:src="@drawable/pc_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/page_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/article_time"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:background="@color/snow_white"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/article_preview_image"
            app:layout_constraintTop_toBottomOf="@id/page_title"
            tools:text="২৩ অগাস্ট ২০১৯, ২২ঃ২২" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/article_time_ph"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/snow_white2"
            android:gravity="center"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/article_preview_image"
            app:layout_constraintTop_toBottomOf="@id/page_title"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/snow_white"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:visibility="gone"
            android:padding ="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/article_preview_image"
            tools:text="article_title article_title article_title article_title article_title article_title article_title "
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="normal"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/article_title_ph"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/snow_white2"
            android:gravity="center"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/article_preview_image"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>